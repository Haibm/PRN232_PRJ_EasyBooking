        <!-- Manage Showtimes -->
        <li class="nav-item">
            @{
                var isShowtimeActive = currentPath.StartsWith("/staff/manageshowtimes");
            }
            <a class="nav-link collapsed text-white @(isShowtimeActive ? "active" : "")"
               data-bs-toggle="collapse" href="#showtimesMenu" role="button" aria-expanded="@isShowtimeActive.ToString().ToLower()">
                <i class="bi bi-calendar-event"></i> Manage Showtimes
            </a>
            <div class="collapse @(isShowtimeActive ? "show" : "")" id="showtimesMenu">
                <ul class="list-unstyled ps-3">
                    <li><a class="nav-link text-white @(currentPath == "/staff/manageshowtimes/list" ? "active" : "")" href="/Staff/ManageShowtimes/List">Showtime List</a></li>
                    <li><a class="nav-link text-white @(currentPath == "/staff/manageshowtimes/create" ? "active" : "")" href="/Staff/ManageShowtimes/Create">Add Showtime</a></li>
                </ul>
            </div>
        </li>
