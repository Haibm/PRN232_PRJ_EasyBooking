@page
@model EasyBooking.Web.Pages.authen.ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            @await Html.PartialAsync("Shared/_UserSidebar")
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    Đổi mật khẩu
                </div>
                <div class="card-body">
                    <form id="changePasswordForm" autocomplete="off">
                        <div class="mb-3 position-relative">
                            <label class="form-label">Mật khẩu cũ</label>
                            <input asp-for="OldPassword" type="password" class="form-control" id="oldPass" name="OldPassword" />
                            <span class="toggle-password" onclick="togglePassword('oldPass')" style="position:absolute; top:38px; right:10px; cursor:pointer;">
                                👁️
                            </span>
                        </div>

                        <div class="mb-3 position-relative">
                            <label class="form-label">Mật khẩu mới</label>
                            <input asp-for="NewPassword" type="password" class="form-control" id="newPass" name="NewPassword" />
                            <span class="toggle-password" onclick="togglePassword('newPass')" style="position:absolute; top:38px; right:10px; cursor:pointer;">
                                👁️
                            </span>
                        </div>

                        <div class="mb-3 position-relative">
                            <label class="form-label">Xác nhận mật khẩu</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPass" name="ConfirmPassword" />
                            <span class="toggle-password" onclick="togglePassword('confirmPass')" style="position:absolute; top:38px; right:10px; cursor:pointer;">
                                👁️
                            </span>
                        </div>

                        <div class="mb-3 d-flex align-items-end">
                            <div class="flex-grow-1">
                                <label class="form-label">Mã xác nhận</label>
                                <input asp-for="VerificationCode" class="form-control" name="VerificationCode" />
                            </div>
                            <button type="button" id="sendCodeBtn" class="btn btn-secondary ms-2" type="button">Gửi mã</button>
                        </div>

                        <button type="submit" class="btn btn-primary">Lưu thông tin</button>
                        <div id="notifyArea" class="mt-2"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(id) {
            var input = document.getElementById(id);
            input.type = input.type === "password" ? "text" : "password";
        }

        document.getElementById('sendCodeBtn').addEventListener('click', async function () {
            const notify = document.getElementById('notifyArea');
            notify.innerHTML = '';
            const response = await fetch('/authen/ChangePassword?handler=SendCode', {
                method: 'POST',
                headers: { 'RequestVerificationToken': document.querySelector('input[name=__RequestVerificationToken]').value },
            });
            const text = await response.text();
            if (response.ok) {
                notify.innerHTML = '<div class="alert alert-success">Đã gửi mã xác nhận đến email của bạn.</div>';
            } else {
                notify.innerHTML = '<div class="alert alert-danger">Không thể gửi mã xác nhận. Vui lòng thử lại.</div>';
            }
        });

        document.getElementById('changePasswordForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const notify = document.getElementById('notifyArea');
            notify.innerHTML = '';
            const formData = new FormData(this);
            const data = {
                OldPassword: formData.get('OldPassword'),
                NewPassword: formData.get('NewPassword'),
                ConfirmPassword: formData.get('ConfirmPassword'),
                VerificationCode: formData.get('VerificationCode')
            };
            const response = await fetch('/authen/ChangePassword', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name=__RequestVerificationToken]').value
                },
                body: JSON.stringify(data)
            });
            const text = await response.text();
            if (response.ok && text.includes('Đổi mật khẩu thành công')) {
                notify.innerHTML = '<div class="alert alert-success">Đổi mật khẩu thành công.</div>';
            } else {
                notify.innerHTML = '<div class="alert alert-danger">Đổi mật khẩu thất bại. Vui lòng kiểm tra lại thông tin và mã xác nhận.</div>';
            }
        });
    </script>
    <script>
        // Đảm bảo click vào sidebar luôn chuyển trang
        document.querySelectorAll('.list-group-item-action').forEach(function(link) {
            link.addEventListener('click', function(e) {
                window.location = this.getAttribute('href');
            });
        });
    </script>
}