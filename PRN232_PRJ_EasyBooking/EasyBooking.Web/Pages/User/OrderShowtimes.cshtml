@page
@model EasyBooking.Web.Pages.User.OrderShowtimesModel
@{
    ViewData["Title"] = "Đặt lịch chiếu phim";
}

<div class="container mt-4">
    <h2 class="mb-4">Lịch chiếu phim</h2>
    <div class="row">
        <!-- Sidebar chọn rạp -->
        <div class="col-md-3">
            <div class="list-group mb-3">
                @foreach (var c in Model.Cinemas)
                {
                    <a href="?cinemaId=@c.CinemaId&day=@Model.SelectedDay.ToString("yyyy-MM-dd")" class="list-group-item list-group-item-action @(c.CinemaId == Model.SelectedCinemaId ? "active" : "")">
                        @c.Name
                    </a>
                }
            </div>
        </div>
        <!-- Main content -->
        <div class="col-md-9">
            <!-- Thanh chọn ngày -->
            <div class="d-flex mb-3 overflow-auto" style="gap:8px;">
                @foreach (var d in Model.Days)
                {
                    <a href="?cinemaId=@Model.SelectedCinemaId&day=@d.ToString("yyyy-MM-dd")" class="btn btn-outline-primary @(d == Model.SelectedDay ? "active" : "")" style="min-width:80px;">
                        @d.ToString("dd")<br />@d.ToString("ddd", new System.Globalization.CultureInfo("vi-VN"))
                    </a>
                }
            </div>
            <!-- Danh sách phim và suất chiếu -->
            <div>
                @if (Model.Movies != null && Model.Movies.Count > 0)
                {
                    @foreach (var m in Model.Movies)
                    {
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-2 d-flex align-items-center">
                                    <img src="@m.PosterUrl" class="img-fluid rounded-start" alt="@m.Title" style="max-height:120px;">
                                </div>
                                <div class="col-md-10">
                                    <div class="card-body">
                                        <h5 class="card-title">@m.Title</h5>
                                        <p class="card-text text-muted">@m.Description</p>
                                        <div class="mb-2">
                                            <span class="badge bg-info text-dark me-1">@m.Duration phút</span>
                                            @foreach (var g in m.Genres ?? new List<string>())
                                            {
                                                <span class="badge bg-secondary me-1">@g</span>
                                            }
                                        </div>
                                        <div class="d-flex flex-wrap" style="gap:8px;">
                                            @foreach (var s in m.Showtimes ?? new List<string>())
                                            {
                                                DateTime? dt = DateTime.TryParse(s, out var parsed) ? parsed : (DateTime?)null;
                                                if (dt != null)
                                                {
                                                    <button class="btn btn-outline-success btn-sm">@dt.Value.ToString("HH:mm dd-MM-yyyy")</button>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">Không có lịch chiếu cho rạp và ngày này.</div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item.active {
        background-color: #e91e63;
        border-color: #e91e63;
        color: #fff;
    }
    .btn-outline-primary.active, .btn-outline-primary:active {
        background-color: #e91e63;
        border-color: #e91e63;
        color: #fff;
    }
</style>
