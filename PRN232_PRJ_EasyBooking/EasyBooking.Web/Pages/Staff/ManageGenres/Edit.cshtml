@page
@model EasyBooking.Web.Pages.Staff.ManageGenres.EditModel
@{
    Layout = "_StaffLayout";
}

<div class="container-fluid py-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white px-0 mb-3">
            <li class="breadcrumb-item"><a href="/Staff/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Staff/ManageGenres/List">Danh sách thể loại</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sửa thể loại</li>
        </ol>
    </nav>
    <h2>Sửa thể loại</h2>
    <form method="post">
        <!-- Hidden GenreId -->
        <input type="hidden" asp-for="Genre.GenreId" />

        <div class="mb-3">
            <label asp-for="Genre.Name" class="form-label">Tên thể loại</label>
            <input asp-for="Genre.Name" class="form-control" />
            <span asp-validation-for="Genre.Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a href="/Staff/ManageGenres/List" class="btn btn-secondary ms-2">Quay lại</a>
    </form>

    @if (Model.Success)
    {
        <div class="alert alert-success mt-3">Cập nhật thành công!</div>
    }
</div> 