@page
@model EasyBooking.Web.Pages.Staff.ManageMovies.ListModel
@{
    Layout = "_StaffLayout";
}

<div class="container-fluid py-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white px-0 mb-3">
            <li class="breadcrumb-item"><a href="/Staff/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Danh sách phim</li>
        </ol>
    </nav>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <a class="btn btn-primary me-2" href="/Staff/ManageMovies/Create"><i class="bi bi-plus-lg"></i> Tạo phim</a>
            <a class="btn btn-outline-secondary" href="/Staff/ManageMovies/List"><i class="bi bi-arrow-clockwise"></i> Refresh</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Tên phim</th>
                    <th>Mô tả</th>
                    <th>Thời lượng</th>
                    <th>Thể loại</th>
                    <th>Lịch chiếu</th>
                    <th>Trạng thái</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Movies == null)
            {
                <tr><td colspan="7" class="text-center">Loading...</td></tr>
            }
            else if (!Model.Movies.Any())
            {
                <tr><td colspan="7" class="text-center">Không có phim nào.</td></tr>
            }
            else
            {
                foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td><a href="/Staff/ManageMovies/Edit?id=@movie.MovieId">@movie.Title</a></td>
                        <td>@movie.Description</td>
                        <td>@movie.Duration</td>
                        <td>
                            @if (movie.Genres != null)
                            {
                                foreach (var genre in movie.Genres)
                                {
                                    <span class="badge bg-primary me-1">@genre</span>
                                }
                            }
                        </td>
                        <td>
                            @if (movie.Showtimes != null)
                            {
                                foreach (var showtime in movie.Showtimes)
                                {
                                    <span class="badge bg-warning text-dark me-1">@showtime.ToString("dd-MM-yyyy")</span>
                                }
                            }
                        </td>
                        <td>
                            @if (movie.Status == "Công khai")
                            {
                                <span class="badge bg-success">Công khai</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Nháp</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-warning me-1" href="/Staff/ManageMovies/Edit?id=@movie.MovieId">Edit</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@movie.MovieId" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this movie?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div> 