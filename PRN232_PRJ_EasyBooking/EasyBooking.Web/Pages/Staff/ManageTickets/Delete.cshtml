@page "{id:int}"
@model EasyBooking.Web.Pages.Staff.ManageTickets.DeleteModel
@{
    ViewData["Title"] = "Delete Ticket";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<h2>Delete Ticket</h2>
<h4>Are you sure you want to delete this ticket?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">TicketId</dt>
        <dd class="col-sm-10">@Model.Ticket.TicketId</dd>
        <dt class="col-sm-2">ShowtimeId</dt>
        <dd class="col-sm-10">@Model.Ticket.ShowtimeId</dd>
        <dt class="col-sm-2">UserId</dt>
        <dd class="col-sm-10">@Model.Ticket.UserId</dd>
        <dt class="col-sm-2">SeatNumber</dt>
        <dd class="col-sm-10">@Model.Ticket.SeatNumber</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Ticket.Status</dd>
        <dt class="col-sm-2">PaymentMethod</dt>
        <dd class="col-sm-10">@Model.Ticket.PaymentMethod</dd>
    </dl>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="List" class="btn btn-secondary">Cancel</a>
    </form>
</div> 