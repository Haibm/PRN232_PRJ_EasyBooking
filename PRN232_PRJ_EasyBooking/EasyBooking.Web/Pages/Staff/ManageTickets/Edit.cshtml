@page "{id:int}"
@model EasyBooking.Web.Pages.Staff.ManageTickets.EditModel
@{
    ViewData["Title"] = "Edit Ticket";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<h2>Edit Ticket</h2>
@if (Model.Success)
{
    <div class="alert alert-success">Ticket updated successfully!</div>
}
<form method="post">
    <div class="mb-3">
        <label asp-for="Ticket.ShowtimeId" class="form-label"></label>
        <input asp-for="Ticket.ShowtimeId" class="form-control" />
        <span asp-validation-for="Ticket.ShowtimeId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Ticket.UserId" class="form-label"></label>
        <input asp-for="Ticket.UserId" class="form-control" />
        <span asp-validation-for="Ticket.UserId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Ticket.SeatNumber" class="form-label"></label>
        <input asp-for="Ticket.SeatNumber" class="form-control" />
        <span asp-validation-for="Ticket.SeatNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Ticket.Status" class="form-label"></label>
        <input asp-for="Ticket.Status" class="form-control" />
        <span asp-validation-for="Ticket.Status" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Ticket.PaymentMethod" class="form-label"></label>
        <input asp-for="Ticket.PaymentMethod" class="form-control" />
        <span asp-validation-for="Ticket.PaymentMethod" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="List" class="btn btn-secondary">Back to List</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 