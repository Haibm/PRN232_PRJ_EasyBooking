@page
@model EasyBooking.Web.Pages.Staff.ManageShowtimes.CreateModel
@{
    Layout = "_StaffLayout";
}

<div class="container-fluid py-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white px-0 mb-3">
            <li class="breadcrumb-item"><a href="/Staff/Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Staff/ManageShowtimes/List">Danh sách lịch chiếu</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tạo lịch chiếu</li>
        </ol>
    </nav>
    <h2>Tạo lịch chiếu</h2>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Showtime.MovieId" class="form-label">Phim</label>
            <select asp-for="Showtime.MovieId" class="form-select">
                <option value="">Chọn phim</option>
                @foreach (var movie in Model.AllMovies)
                {
                    <option value="@movie.MovieId">@movie.Title</option>
                }
            </select>
            <span asp-validation-for="Showtime.MovieId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Showtime.RoomId" class="form-label">Phòng chiếu</label>
            <select asp-for="Showtime.RoomId" class="form-select">
                <option value="">Chọn phòng</option>
                @foreach (var room in Model.AllRooms)
                {
                    <option value="@room.RoomId">@room.Name</option>
                }
            </select>
            <span asp-validation-for="Showtime.RoomId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Showtime.StartTime" class="form-label">Ngày chiếu</label>
            <input asp-for="Showtime.StartTime" class="form-control" type="datetime-local" />
            <span asp-validation-for="Showtime.StartTime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Showtime.Price" class="form-label">Giá vé</label>
            <input asp-for="Showtime.Price" class="form-control" />
            <span asp-validation-for="Showtime.Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Tạo</button>
        <a href="/Staff/ManageShowtimes/List" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
    @if (Model.Success)
    {
        <div class="alert alert-success mt-3">Tạo lịch chiếu thành công!</div>
    }
</div> 